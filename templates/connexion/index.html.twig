{% extends 'base.html.twig' %}

{% block title %}Connexion index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css"/>
    <link rel="stylesheet" href="{{ asset('css/style_inscription.css') }}" type="text/css"/>
{% endblock %}

{% block body %}
    <h1>Connexion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uid</th>
                <th>Mail</th>
                <th>Mdp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for connexion in connexions %}
            <tr>
                <td>{{ connexion.id }}</td>
                <td>{{ connexion.uid }}</td>
                <td>{{ connexion.mail }}</td>
                <td>{{ connexion.mdp }}</td>
                <td>
                    <a href="{{ path('connexion_show', {'id': connexion.id}) }}">show</a>
                    <a href="{{ path('connexion_edit', {'id': connexion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('connexion_new') }}">Create new</a>
{% endblock %}
